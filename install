local player = game.Players.LocalPlayer
local inventoryFolders = { "Backpack", "StarterGear", "Character" } -- CÃ¡c nÆ¡i cÃ³ thá»ƒ chá»©a item

-- ðŸ“Œ HÃ m Ä‘áº¿m sá»‘ lÆ°á»£ng Insta-Plant Capsule
function countCapsules()
    local capsuleCount = 0

    for _, folderName in ipairs(inventoryFolders) do
        local container = player:FindFirstChild(folderName)
        if container then
            for _, item in ipairs(container:GetChildren()) do
                if item:IsA("Tool") and string.find(item.Name, "Capsule") then
                    capsuleCount = capsuleCount + 1
                end
            end
        end
    end

    return capsuleCount
end

-- ðŸš€ In sá»‘ lÆ°á»£ng Insta-Plant Capsule ra console
while true do
    local count = countCapsules()
    print("ðŸŸ¢ Sá»‘ lÆ°á»£ng Insta-Plant Capsule trong inventory:", count)
    wait(5) -- Cáº­p nháº­t má»—i 5 giÃ¢y (cÃ³ thá»ƒ chá»‰nh)
end
