local teleportPositions = {
    Vector3.new(-464.85, 108.41, -1420.58),
    Vector3.new(-454.03, 108.80, -1420.85),
    Vector3.new(-439.38, 108.42, -1410.63),
    Vector3.new(-439.11, 108.42, -1399.78),
    Vector3.new(-442.27, 108.41, -1377.93),
    Vector3.new(-453.42, 108.80, -1377.46),
    Vector3.new(-451.87, 108.80, -1396.94),
    Vector3.new(-463.72, 108.80, -1377.45)
}

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")

-- Tìm RemoteEvent (nếu có)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local plantEvent = ReplicatedStorage:FindFirstChild("PlantSeedEvent") -- Thay bằng tên đúng nếu khác

function teleportAndPlant()
    for _, pos in ipairs(teleportPositions) do
        humanoidRootPart.CFrame = CFrame.new(pos) -- Tele đến chậu cây

        -- Nếu game sử dụng RemoteEvent để trồng cây, gửi lệnh trực tiếp
        if plantEvent then
            plantEvent:FireServer("Diamond Seed") -- Gửi lệnh trồng cây
        else
            -- Nếu không tìm thấy RemoteEvent, thử giả lập thao tác
            local tool = player.Backpack:FindFirstChild("Diamond Seed")
            if tool then
                player.Character.Humanoid:EquipTool(tool) -- Chọn hạt giống
            end
            
            wait(0.2) -- Chờ chút để game nhận diện

            local confirmButton = game.Players.LocalPlayer.PlayerGui:FindFirstChild("ConfirmButton")
            if confirmButton then
                confirmButton:Fire() -- Nhấn "Confirm"
            end

            wait(0.2)

            local yesButton = game.Players.LocalPlayer.PlayerGui:FindFirstChild("YesButton")
            if yesButton then
                yesButton:Fire() -- Nhấn "Yes"
            end
        end

        wait(0.5) -- Đợi 0.5s trước khi trồng cây tiếp theo
    end
end

teleportAndPlant()
