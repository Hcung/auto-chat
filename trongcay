local teleportPositions = {
    Vector3.new(-464.85, 108.41, -1420.58),
    Vector3.new(-454.03, 108.80, -1420.85),
    Vector3.new(-439.38, 108.42, -1410.63),
    Vector3.new(-439.11, 108.42, -1399.78),
    Vector3.new(-442.27, 108.41, -1377.93),
    Vector3.new(-453.42, 108.80, -1377.46),
    Vector3.new(-451.87, 108.80, -1396.94),
    Vector3.new(-463.72, 108.80, -1377.45)
}

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")

-- Giả lập nhấn phím E
function pressE()
    VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.E, false, game)
    wait(0.2)
    VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.E, false, game)
end

-- Chọn Diamond Seed
function selectDiamondSeed()
    local tool = player.Backpack:FindFirstChild("Diamond Seed")
    if tool then
        player.Character.Humanoid:EquipTool(tool)
    end
end

-- Nhấn nút Confirm
function pressConfirm()
    local confirmButton = game.Players.LocalPlayer.PlayerGui:FindFirstChild("ConfirmButton")
    if confirmButton then
        confirmButton:Fire()
    end
end

-- Nhấn nút Yes
function pressYes()
    local yesButton = game.Players.LocalPlayer.PlayerGui:FindFirstChild("YesButton")
    if yesButton then
        yesButton:Fire()
    end
end

-- Thực hiện quá trình trồng cây
function teleportAndPlant()
    for _, pos in ipairs(teleportPositions) do
        humanoidRootPart.CFrame = CFrame.new(pos) -- Tele đến chậu cây
        wait(0.5)

        pressE() -- Nhấn "E" để mở menu
        wait(0.5)

        selectDiamondSeed() -- Chọn hạt giống Diamond Seed
        wait(0.5)

        pressConfirm() -- Nhấn "Confirm"
        wait(0.5)

        pressYes() -- Nhấn "Yes"
        wait(0.5)

        -- Chờ 0.5s trước khi di chuyển sang chậu khác
    end
end

teleportAndPlant()
