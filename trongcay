local teleportPositions = {
    Vector3.new(-464.85, 108.41, -1420.58),
    Vector3.new(-454.03, 108.80, -1420.85),
    Vector3.new(-439.38, 108.42, -1410.63),
    Vector3.new(-439.11, 108.42, -1399.78),
    Vector3.new(-442.27, 108.41, -1377.93),
    Vector3.new(-453.42, 108.80, -1377.46),
    Vector3.new(-451.87, 108.80, -1396.94),
    Vector3.new(-463.72, 108.80, -1377.45)
}

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Tìm GUI của game
local playerGui = player:FindFirstChild("PlayerGui")

-- Hàm nhấn E để mở menu trồng cây
function pressE()
    local proximityPrompt = game:GetService("ProximityPromptService"):GetChildren()[1]
    if proximityPrompt then
        firesignal(proximityPrompt.Triggered, player)
    end
end

-- Chọn Diamond Seed
function selectDiamondSeed()
    local tool = player.Backpack:FindFirstChild("Diamond Seed")
    if tool then
        player.Character.Humanoid:EquipTool(tool)
    end
end

-- Nhấn Confirm
function pressConfirm()
    local confirmButton = playerGui:FindFirstChild("ConfirmButton")
    if confirmButton then
        firesignal(confirmButton.MouseButton1Click)
    end
end

-- Nhấn Yes
function pressYes()
    local yesButton = playerGui:FindFirstChild("YesButton")
    if yesButton then
        firesignal(yesButton.MouseButton1Click)
    end
end

-- Di chuyển tới từng chậu và trồng cây
function teleportAndPlant()
    for _, pos in ipairs(teleportPositions) do
        humanoidRootPart.CFrame = CFrame.new(pos) -- Dịch chuyển đến chậu cây
        wait(0.5)

        pressE() -- Nhấn E mở menu
        wait(0.5)

        selectDiamondSeed() -- Chọn hạt giống Diamond Seed
        wait(0.5)

        pressConfirm() -- Nhấn Confirm
        wait(0.5)

        pressYes() -- Nhấn Yes
        wait(0.5)
    end
end

teleportAndPlant()
