local player = game.Players.LocalPlayer
local replicatedStorage = game:GetService("ReplicatedStorage")
local gardenMerchant = replicatedStorage:FindFirstChild("GardenMerchant")

if not gardenMerchant then
    warn("âŒ KhÃ´ng tÃ¬m tháº¥y Garden Merchant!")
    return
