-- ğŸ“Œ HÃ m Ä‘á»ƒ mua item tá»« merchant
function buyAllItems()
    for _, item in ipairs(gardenMerchant:GetChildren()) do
        if item:IsA("RemoteEvent") then
            item:FireServer() -- Gá»­i yÃªu cáº§u mua item
            wait(0.3) -- Delay trÃ¡nh spam quÃ¡ nhanh
        end
    end
end

-- ğŸš€ Tá»± Ä‘á»™ng mua táº¥t cáº£ váº­t pháº©m
buyAllItems()
