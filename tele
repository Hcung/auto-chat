local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera

-- Tọa độ vị trí HumanoidRootPart (từ hình ảnh của bạn)
local targetPosition = Vector3.new(-466.007, 108.423, -1399.17) 

-- Góc quay theo ảnh (X, Y, Z)
local targetRotation = CFrame.Angles(math.rad(-84.1), math.rad(-90), 0) 

-- Hàm khóa camera
local function lockCamera()
    camera.CameraType = Enum.CameraType.Scriptable
    camera.CFrame = CFrame.new(targetPosition) * targetRotation
    print("✅ Camera locked to minigame view!")
end

-- Khi nhân vật xuất hiện (từ đầu game)
player.CharacterAdded:Connect(function()
    task.wait(1) -- Đợi load xong
    lockCamera()
end)

-- Khi teleport vào minigame (theo vị trí thay đổi)
player.Character.HumanoidRootPart:GetPropertyChangedSignal("Position"):Connect(function()
    if (player.Character.HumanoidRootPart.Position - targetPosition).magnitude < 5 then
        lockCamera()
    end
end)
