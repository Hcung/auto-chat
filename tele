local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- 📌 Cập nhật lại vị trí teleport (tọa độ mới)
local targetPosition = Vector3.new(-465.9693908691406, 108.42337036132812, -1399.500244140625)

-- 📌 Camera Lock (từ Dark Dex)
local camera = workspace.CurrentCamera
camera.CameraType = Enum.CameraType.Scriptable
camera.CFrame = CFrame.new(473.877365, 116.042824, -1396.968994)

-- 📌 Teleport nhân vật đến vị trí mong muốn
humanoidRootPart.CFrame = CFrame.new(targetPosition)

print("✅ Đã teleport và lock camera thành công!")
