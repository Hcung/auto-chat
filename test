local player = game.Players.LocalPlayer
if player and player.Character then
    local hrp = player.Character:FindFirstChild("HumanoidRootPart")
    if hrp then
        -- Toáº¡ Ä‘á»™ trÆ°á»›c cá»­a Minigame (Cáº­p nháº­t náº¿u cáº§n)
        local toaDoMinigame = Vector3.new(183.913, 22.938, 1995.265)

        -- Teleport Ä‘áº¿n Minigame
        print("ğŸš€ Teleport Ä‘áº¿n trÆ°á»›c cá»­a Minigame...")
        hrp.CFrame = CFrame.new(toaDoMinigame)
        wait(1)

        -- Äi vÃ i bÆ°á»›c vÃ o bÃªn trong
        print("ğŸš¶ Äi vÃ o bÃªn trong Minigame...")
        for i = 1, 5 do
            hrp.CFrame = hrp.CFrame * CFrame.new(0, 0, -2) -- Äi tháº³ng vÃ o
            wait(0.5)
        end

        print("ğŸ¯ ÄÃ£ vÃ o trong Minigame. Báº¯t Ä‘áº§u trá»“ng cÃ¢y Diamond...")

        -- TÃ¬m táº¥t cáº£ cháº­u cÃ¢y trong game
        local cháº­uCÃ¢y = {}
        for _, v in pairs(game:GetService("Workspace"):GetChildren()) do
            if v:IsA("Part") and v.Name == "PlantPot" then
                table.insert(cháº­uCÃ¢y, v.Position)
            end
        end

        -- Náº¿u khÃ´ng tÃ¬m tháº¥y cháº­u nÃ o
        if #cháº­uCÃ¢y == 0 then
            print("âŒ KhÃ´ng tÃ¬m tháº¥y cháº­u cÃ¢y nÃ o.")
            return
        end

        print("ğŸŒ¿ TÃ¬m tháº¥y " .. #cháº­uCÃ¢y .. " cháº­u cÃ¢y. Báº¯t Ä‘áº§u trá»“ng Diamond...")

        for _, pos in pairs(cháº­uCÃ¢y) do
            -- Teleport Ä‘áº¿n cháº­u cÃ¢y
            hrp.CFrame = CFrame.new(pos + Vector3.new(0, 3, 0))
            wait(0.5)

            -- Má»Ÿ menu trá»“ng cÃ¢y (DÃ¹ng AWP Executor)
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("OpenPlantingMenu")
            end)

            wait(0.5)

            -- Chá»n cÃ¢y Diamond
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("SelectPlant", "DiamondTree")
            end)

            wait(0.2)

            -- XÃ¡c nháº­n trá»“ng
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("ConfirmPlant")
            end)

            print("âœ… ÄÃ£ trá»“ng cÃ¢y Diamond táº¡i cháº­u: ", pos)
            wait(1)
        end

        print("ğŸ‰ ÄÃ£ hoÃ n thÃ nh trá»“ng táº¥t cáº£ cÃ¢y Diamond!")
    end
end
