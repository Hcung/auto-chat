local player = game.Players.LocalPlayer
if player and player.Character then
    local hrp = player.Character:FindFirstChild("HumanoidRootPart")
    if hrp then
        local ch·∫≠uC√¢y = {} -- L∆∞u danh s√°ch ch·∫≠u c√¢y trong game

        -- T√¨m t·∫•t c·∫£ c√°c ch·∫≠u c√¢y
        for _, v in pairs(game:GetService("Workspace"):GetChildren()) do
            if v:IsA("Part") and v.Name == "PlantPot" then
                table.insert(ch·∫≠uC√¢y, v.Position)
            end
        end

        -- N·∫øu kh√¥ng t√¨m th·∫•y ch·∫≠u n√†o
        if #ch·∫≠uC√¢y == 0 then
            print("‚ùå Kh√¥ng t√¨m th·∫•y ch·∫≠u c√¢y n√†o.")
            return
        end

        print("üåø T√¨m th·∫•y " .. #ch·∫≠uC√¢y .. " ch·∫≠u c√¢y. B·∫Øt ƒë·∫ßu tr·ªìng Diamond...")

        for _, pos in pairs(ch·∫≠uC√¢y) do
            -- B∆∞·ªõc 1: Teleport ƒë·∫øn ch·∫≠u c√¢y
            hrp.CFrame = CFrame.new(pos + Vector3.new(0, 3, 0)) -- ƒê·ª©ng ph√≠a tr√™n ch·∫≠u
            wait(0.5) -- Ch·ªù ƒë·ªÉ game load
            
            -- B∆∞·ªõc 2: M·ªü menu tr·ªìng c√¢y (D√πng AWP Executor)
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("OpenPlantingMenu")
            end)

            wait(0.5) -- Ch·ªù menu m·ªü

            -- B∆∞·ªõc 3: Ch·ªçn c√¢y Diamond
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("SelectPlant", "DiamondTree")
            end)

            wait(0.2)

            -- B∆∞·ªõc 4: X√°c nh·∫≠n tr·ªìng
            AWP.Execute(function()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("ConfirmPlant")
            end)

            print("‚úÖ ƒê√£ tr·ªìng c√¢y Diamond t·∫°i ch·∫≠u: ", pos)
            wait(1) -- Ch·ªù tr∆∞·ªõc khi qua ch·∫≠u ti·∫øp theo
        end

        print("üéâ ƒê√£ ho√†n th√†nh tr·ªìng t·∫•t c·∫£ c√°c c√¢y Diamond!")
    end
end
