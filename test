local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- ğŸ Toáº¡ Ä‘á»™ trÆ°á»›c Minigame
local minigamePosition = Vector3.new(183.913, 22.938, 1995.265)

-- ğŸš€ Teleport Ä‘áº¿n trÆ°á»›c Minigame
hrp.CFrame = CFrame.new(minigamePosition)
wait(1)

-- ğŸš¶ Äi vÃ i bÆ°á»›c vÃ o Minigame
for i = 1, 5 do
    hrp.CFrame = hrp.CFrame * CFrame.new(0, 0, -2)
    wait(0.5)
end

print("âœ… ÄÃ£ vÃ o Minigame, báº¯t Ä‘áº§u tÃ¬m cháº­u cÃ¢y...")

-- ğŸŒ± TÃ¬m táº¥t cáº£ cháº­u cÃ¢y trong game
local plantPots = {}
for _, obj in pairs(workspace:GetDescendants()) do
    if obj:IsA("Part") and obj.Name == "PlantPot" then
        table.insert(plantPots, obj)
    end
end

if #plantPots == 0 then
    print("âŒ KhÃ´ng tÃ¬m tháº¥y cháº­u cÃ¢y nÃ o!")
    return
end

print("ğŸŒ¿ ÄÃ£ tÃ¬m tháº¥y " .. #plantPots .. " cháº­u cÃ¢y. Báº¯t Ä‘áº§u trá»“ng Diamond...")

for _, pot in ipairs(plantPots) do
    -- ğŸš€ Teleport Ä‘áº¿n tá»«ng cháº­u cÃ¢y
    hrp.CFrame = CFrame.new(pot.Position + Vector3.new(0, 3, 0))
    wait(0.5)

    -- ğŸ”„ Kiá»ƒm tra ClickDetector
    local clickDetector = pot:FindFirstChildWhichIsA("ClickDetector")
    if clickDetector then
        fireclickdetector(clickDetector)
        wait(0.5)
    else
        print("âš ï¸ KhÃ´ng tÃ¬m tháº¥y ClickDetector táº¡i cháº­u:", pot.Position)
        continue
    end

    -- ğŸŒ³ Gá»­i lá»‡nh trá»“ng cÃ¢y Diamond
    local args = {
        [1] = "PlantTree",
        [2] = "DiamondTree"
    }
    game.ReplicatedStorage.RemoteEvent:FireServer(unpack(args))

    wait(1)
    print("âœ… ÄÃ£ trá»“ng cÃ¢y Diamond táº¡i cháº­u:", pot.Position)
end

print("ğŸ‰ HoÃ n thÃ nh trá»“ng táº¥t cáº£ cÃ¢y Diamond!")
