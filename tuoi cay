local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- LÆ°u danh sÃ¡ch cÃ¡c cÃ¢y tÃ¬m tháº¥y trong game
local foundPlants = {}

-- Sá»± kiá»‡n khi nháº¥n chuá»™t
local UIS = game:GetService("UserInputService")

local function getMousePosition()
    local mouse = player:GetMouse()
    return Vector3.new(mouse.Hit.p.X, mouse.Hit.p.Y, mouse.Hit.p.Z)
end

-- HÃ m in ra thÃ´ng tin click chuá»™t
local function onClick()
    local mousePosition = getMousePosition()
    local cam = workspace.CurrentCamera
    local direction = (mousePosition - cam.CFrame.Position).unit
    
    local ray = Ray.new(cam.CFrame.Position, direction * 500)
    
    print("\nðŸŒ± **Tá»a Ä‘á»™ cÃ¢y:**", mousePosition)
    print("ðŸŽ¯ **Raycast Click:**", ray)
    
    table.insert(foundPlants, mousePosition)
end

-- Láº¯ng nghe sá»± kiá»‡n chuá»™t trÃ¡i
UIS.InputBegan:Connect(function(input, gameProcessed)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        onClick()
    end
end)

-- Di chuyá»ƒn Ä‘áº¿n cÃ¢y tiáº¿p theo sau khi nháº¥n má»™t phÃ­m (vÃ­ dá»¥: phÃ­m "N")
UIS.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.N then
        if #foundPlants > 0 then
            local nextPlant = table.remove(foundPlants, 1)
            hrp.CFrame = CFrame.new(nextPlant)
            print("ðŸš€ **Di chuyá»ƒn Ä‘áº¿n cÃ¢y:**", nextPlant)
        end
    end
end)
