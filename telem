local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")

-- 📌 Tọa độ điểm spawn ban đầu
local startPosition = Vector3.new(184.9508819580078, 22.715150833129883, 1995.9241943359375)

-- 📌 Dịch chuyển đến vị trí spawn ban đầu
humanoidRootPart.CFrame = CFrame.new(startPosition)
print("✅ Teleport đến vị trí ban đầu thành công!")

-- 📌 Chờ 1 giây trước khi di chuyển để tránh lỗi
task.wait(1)

-- 📌 Di chuyển nhân vật về phía trước (3-4 bước)
local moveDirection = Vector3.new(0, 0, -5) -- Điều chỉnh vector để di chuyển đúng hướng vào map
for i = 1, 4 do
    humanoidRootPart.CFrame = humanoidRootPart.CFrame * CFrame.new(moveDirection)
    task.wait(0.5) -- Đợi một chút giữa mỗi bước để tránh lỗi dịch chuyển quá nhanh
end

print("🚶‍♂️ Nhân vật đã bước vào map thành công!")
